<h2>Index</h2>
<div class="col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NoiDung)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NgayBinhLuan)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BaiDang.TieuDe)
