                        @Html.DisplayFor(modelItem => item.NgayBinhLuan)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BaiDang.TieuDe)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TaiKhoan.TenDangNhap)
                    </td>
                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.ID_BinhLuan }) *@|
