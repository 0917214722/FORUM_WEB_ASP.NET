@model IEnumerable<FORUM_WEB.Models.FrameWork.BaiDang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<div class="col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TieuDe)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NoiDung)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NgayDangBai)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ChuDe.TenChuDe)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TaiKhoan.MatKhau)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TieuDe)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NoiDung)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayDangBai)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ChuDe.TenChuDe)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TaiKhoan.TenDangNhap)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.ID_BaiDang }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID_BaiDang })
                    </td>
                </tr>
            }

        </table>

    </div><!--/.row-->
</div>
